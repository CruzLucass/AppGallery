<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Paginas.PaginaDeAbas.Abas"
            xmlns:local="clr-namespace:AppGallery.XamarinForms.Paginas.PaginaDeAbas"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            BarBackgroundColor="Black"
            SelectedTabColor="Red"
            UnselectedTabColor="DarkGray"
            android:TabbedPage.ToolbarPlacement="Bottom"
            >
    
    <ContentPage Title="Tab 1">
        <StackLayout>
            <Label Text="Pagina 01" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage>
    
    <ContentPage Title="Tab 2" IconImageSource="logo.png">
        <StackLayout>
            <Label Text="Pagina 02" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage>
    
    <ContentPage Title="Tab 3">
        <StackLayout>
            <Label Text="Pagina 03" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage>
    
</TabbedPage>